    int n;
    cin>>n;
    int i=1,k,val;
    while(i<=n){
        //int k=n-i;
        k=1;
        while(k<=n-i){
            cout<<" ";
            k++;
        }
        val=i;
        int j=1;
        while(j<=i)
        {
            cout<<val;
            val++;
            j++;
        }
        cout<<endl;
        i++;
    }
    
}

